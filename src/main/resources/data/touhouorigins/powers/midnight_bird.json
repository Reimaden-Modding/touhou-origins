{
  "type": "apoli:multiple",
  "resource": {
    "type": "apoli:resource",
    "min": 0,
    "max": 2
  },
  "toggle": {
    "type": "apoli:active_self",
    "entity_action": {
      "type": "apoli:if_else_list",
      "actions":
      [
        {
          "condition": {
            "type": "apoli:and",
            "conditions":
            [
              {
                "type": "apoli:resource",
                "resource": "*:*_resource",
                "comparison": "==",
                "compare_to": 1
              }
            ]
          },
          "action": {
            "type": "apoli:and",
            "actions":
            [
              {
                "type": "apoli:change_resource",
                "resource": "*:*_resource",
                "operation": "set",
                "change": 0
              }
            ]
          }
        },
        {
          "condition": {
            "type": "apoli:and",
            "conditions":
            [
              {
                "type": "apoli:resource",
                "resource": "*:*_resource",
                "comparison": "==",
                "compare_to": 0
              }
            ]
          },
          "action": {
            "type": "apoli:and",
            "actions":
            [
              {
                "type": "apoli:change_resource",
                "resource": "*:*_resource",
                "operation": "set",
                "change": 1
              },
              {
                "type": "apoli:trigger_cooldown",
                "power": "*:*_splat_warmup"
              }
            ]
          }
        },
        {
          "condition": {
            "type": "apoli:resource",
            "resource": "*:*_resource",
            "comparison": "==",
            "compare_to": 2
          },
          "action": {
            "type": "apoli:execute_command",
            "command": "title @s actionbar {\"translate\":\"power.touhouorigins.midnight_bird_cooldown\"}"
          }
        }
      ]
    }
  },
  "propel_forward": {
    "type": "apoli:action_over_time",
    "entity_action": {
      "type": "apoli:and",
      "actions":
      [
        {
          "type": "apoli:add_velocity",
          "space": "local",
          "set": true,
          "z": 1
        },
        {
          "type": "apoli:exhaust",
          "amount": 0.2
        }
      ]
    },
    "interval": 2,
    "condition": {
      "type": "apoli:and",
      "conditions":
      [
        {
          "type": "apoli:sneaking",
          "inverted": true
        },
        {
          "type": "apoli:resource",
          "resource": "*:*_resource",
          "comparison": "==",
          "compare_to": 1
        }
      ]
    }
  },
  "reset_splat_on_sneak": {
    "type": "apoli:action_over_time",
    "entity_action": {
      "type": "apoli:change_resource",
      "resource": "*:*_splat_warmup",
      "change": 10
    },
    "interval": 1,
    "condition": {
      "type": "apoli:and",
      "conditions":
      [
        {
          "type": "apoli:sneaking"
        },
        {
          "type": "apoli:resource",
          "resource": "*:*_resource",
          "comparison": "==",
          "compare_to": 1
        }
      ]
    }
  },
  "cancel_gravity": {
    "type": "apoli:modify_falling",
    "velocity": 0,
    "take_fall_damage": false,
    "condition": {
      "type": "apoli:resource",
      "resource": "*:*_resource",
      "comparison": "==",
      "compare_to": 1
    }
  },
  "anti_anti_cheat": {
    "type": "apoli:action_over_time",
    "rising_action": {
      "type": "apoli:grant_power",
      "power": "*:can_fly",
      "source": "*:kurayami"
    },
    "falling_action": {
      "type": "apoli:revoke_power",
      "power": "*:can_fly",
      "source": "*:kurayami"
    },
    "condition": {
      "type": "apoli:resource",
      "resource": "*:*_resource",
      "comparison": "==",
      "compare_to": 1
    }
  },
  "splat": {
    "type": "apoli:damage_over_time",
    "interval": 20,
    "onset_delay": 1,
    "damage": 1,
    "damage_source": {
      "name": "flyIntoWall",
      "unblockable": true,
      "bypasses_armor": true
    },
    "condition": {
      "type": "apoli:and",
      "conditions":
      [
        {
          "type": "apoli:resource",
          "resource": "*:*_resource",
          "comparison": "==",
          "compare_to": 1
        },
        {
          "type": "apoli:sneaking",
          "inverted": true
        },
        {
          "type": "apoli:or",
          "conditions":
          [
            {
              "type": "apoli:block_collision",
              "offset_x": 0.1,
              "offset_y": 0.1,
              "offset_z": 0.1
            },
            {
              "type": "apoli:block_collision",
              "offset_x": -0.1,
              "offset_y": -0.1,
              "offset_z": -0.1
            }
          ]
        },
        {
          "type": "apoli:resource",
          "resource": "*:*_splat_warmup",
          "comparison": "==",
          "compare_to": 0
        }
      ]
    }
  },
  "splat_warmup": {
    "type": "apoli:cooldown",
    "cooldown": 10
  },
  "toggle_splat": {
    "type": "apoli:action_when_damage_taken",
    "entity_action": {
      "type": "apoli:and",
      "actions":
      [
        {
          "type": "apoli:change_resource",
          "resource": "*:*_resource",
          "operation": "set",
          "change": 2
        },
        {
          "type": "apoli:trigger_cooldown",
          "power": "*:*_splat_recover_timer"
        }
      ]
    }
  },
  "splat_recover": {
    "type": "apoli:action_over_time",
    "entity_action": {
      "type": "apoli:change_resource",
      "resource": "*:*_resource",
      "operation": "set",
      "change": 0
    },
    "interval": 1,
    "condition": {
      "type": "apoli:or",
      "conditions": [
        {
          "type": "apoli:resource",
          "resource": "*:*_splat_recover_timer",
          "comparison": "==",
          "compare_to": 1
        }
      ]
    }
  },
  "splat_recover_timer": {
    "type": "apoli:cooldown",
    "cooldown": 60,
    "hud_render": {
      "should_render": true,
      "sprite_location": "origins:textures/gui/community/spiderkolo/resource_bar_03.png",
      "bar_index": 23
    }
  },
  "flight_sound": {
    "type": "apoli:active_self",
    "entity_action": {
      "type": "apoli:play_sound",
      "sound": "touhouorigins:entity.kurayami.flight"
    },
    "condition": {
      "type": "apoli:and",
      "conditions":
      [
        {
          "type": "apoli:resource",
          "resource": "*:*_resource",
          "comparison": "<=",
          "compare_to": 1
        }
      ]
    }
  },
  "flight_reset_death": {
    "type": "origins:action_on_callback",
    "entity_action_respawned": {
      "type": "apoli:delay",
      "ticks": 1,
      "action": {
        "type": "apoli:and",
        "actions": [
          {
            "type": "apoli:change_resource",
            "resource": "*:*_resource",
            "operation": "set",
            "change": 0
          },
          {
            "type": "apoli:change_resource",
            "resource": "*:*_splat_recover_timer",
            "operation": "set",
            "change": 60
          }
        ]
      }
    }
  },
  "badges":
  [
    "origins:toggle"
  ]
}
